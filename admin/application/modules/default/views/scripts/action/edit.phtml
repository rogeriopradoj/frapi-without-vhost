        $('#params').append(html);
        i++;
    });

    function deleteButton()
    {
        $('a.delete-button').live('click', function () {
            id = $(this).parent().find('input:hidden').val();
            $(this).parent().parent().remove();

            if (id == 'undefined') {
                return false;
            }

            // Get the ID
            jQuery.ajax({
                type: "POST",
                url: "<?php echo URL_BASE; ?>/action/edit/id/<?php echo $this->id; ?>/param/delete/paramid/" + id,
                success: function(msg) {}
            });
        });
    }

    deleteButton();
});
</script>
